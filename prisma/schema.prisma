generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
  // directUrl = env("POSTGRES_URL_NON_POOLING") // Enable if you have a separate non-pooling URL
}

model Service {
  id               String   @id
  title            String
  shortDescription String
  isVisible        Boolean  @default(true)
  updatedAt        DateTime @updatedAt
}

model Testimonial {
  id         String   @id @default(cuid())
  authorName String
  rating     Int
  content    String
  status     String   @default("PENDING") // PENDING, APPROVED, ARCHIVED
  serviceId  String?
  createdAt  DateTime @default(now())
}

model Inquiry {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  status    String   @default("NEW") // NEW, CONTACTED, CLOSED
  createdAt DateTime @default(now())
}

model BlogPost {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   // Markdown or HTML
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
